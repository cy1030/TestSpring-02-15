<body>
	
	<div class="container">
		
		<h1>즐겨찾기 추가하기</h1>
		
		<label>이름</label>
		<input type="text" class="form-control" id="nameInput"> <br>
		<label>주소</label>
		<input type="text" class="form-control" id="urlInput"> 
		<button type="button" id="duplicateBtn">중복확인</button> <br>
		<div id="duplicateText" class="d-none"> <small>중복된 url주소입니다.</small> </div>
		
		
		<button type="button" class="btn btn-info btn-block col-1" id="addBtn">추가</button>	
	</div>
	
	<script>
		$(document).ready(function(){
				$("#addBtn").on("click", function(){
					let name = ${"#nameInput"}.val();
					let url = ${"#urlInput"}.val();
					alert();
					
					alert(name + "" + url);
					// 유효성 검사
					
					// ajax를 통한 apl 호출
					
					// 성공여부에 따른 기능 
					
				});
				
				$("#duplicateBtn").on("click", function(){
					
					let name = ${"#nameInput"}.val();
					let url = ${"urlInput"}.val();
					
					if(url == "") {
						alert("주소를 입력하세요!");
						return;	
					}
					
					if(name == "") {
						alert("이름을 입력하세요!");
						return;	
					}
					
					$ajax({
						type:"get"
						url:"/lesson06/is_duplicate",
						data:{"url",url},
						success:function(data){
							if(data.is_duplicate){
								${"#duplicateText"}.show();
							}
						}, 
						error:function(){
							alert("중복체크 에러");
						}
					})
					
					
				});
				
		});
	
	
	
	
	
	
	
	
	
	</script>
	
	
	
	
</body>
</html>